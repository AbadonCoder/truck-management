aside(class="flex flex-col flex-initial p-8 bg-slate-900 w-full md:w-80 h-screen absolute md:static -left-full md:translate-x-0 transition-transform translate-x-full" id="menu")
        //- Main menu
        ul.space-y-4
            
            //- Main elements
            li.text-white
                div.flex.items-center.gap-2 
                    svg.w-6.h-6(xmlns='http://www.w3.org/2000/svg' fill='none' viewbox='0 0 24 24' stroke-width='1.5' stroke='currentColor')
                        path(stroke-linecap='round' stroke-linejoin='round' d='M10.5 6h9.75M10.5 6a1.5 1.5 0 11-3 0m3 0a1.5 1.5 0 10-3 0M3.75 6H7.5m3 12h9.75m-9.75 0a1.5 1.5 0 01-3 0m3 0a1.5 1.5 0 00-3 0m-3.75 0H7.5m9-6h3.75m-3.75 0a1.5 1.5 0 01-3 0m3 0a1.5 1.5 0 00-3 0m-9.75 0h9.75')
                    
                    a.font-bold(href="#") Manage 
                
                //- Submenu
                ul.mt-2.ml-8.space-y-3 
                    //- Sub elements
                    li 
                        a(href="/manage/manage-outputs" class=title.toLowerCase() == 'outputs' ? 'active' : '') Manage outputs 

                    li
                        a(href="#") Add output

            li.text-white
                div.flex.items-center.gap-2 
                    svg.w-6.h-6(xmlns='http://www.w3.org/2000/svg' fill='none' viewbox='0 0 24 24' stroke-width='1.5' stroke='currentColor')
                        path(stroke-linecap='round' stroke-linejoin='round' d='M8.25 18.75a1.5 1.5 0 01-3 0m3 0a1.5 1.5 0 00-3 0m3 0h6m-9 0H3.375a1.125 1.125 0 01-1.125-1.125V14.25m17.25 4.5a1.5 1.5 0 01-3 0m3 0a1.5 1.5 0 00-3 0m3 0h1.125c.621 0 1.129-.504 1.09-1.124a17.902 17.902 0 00-3.213-9.193 2.056 2.056 0 00-1.58-.86H14.25M16.5 18.75h-2.25m0-11.177v-.958c0-.568-.422-1.048-.987-1.106a48.554 48.554 0 00-10.026 0 1.106 1.106 0 00-.987 1.106v7.635m12-6.677v6.677m0 4.5v-4.5m0 0h-12')

                    a.font-bold(href="#") Trucks 
                
                //- Submenu
                ul.mt-2.ml-8.space-y-3 
                    //- Sub elements
                    li 
                        a(href="#" class=title.toLowerCase() == 'trucks' ? 'active' : '') Manage Trucks

                    li
                        a(href="#" class=title.toLowerCase() == 'add truck' ? 'active' : '') Add trucks

            li.text-white 
                div.flex.items-center.gap-2
                    svg.w-6.h-6(xmlns='http://www.w3.org/2000/svg' fill='none' viewbox='0 0 24 24' stroke-width='1.5' stroke='currentColor')
                        path(stroke-linecap='round' stroke-linejoin='round' d='M15.75 6a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0zM4.501 20.118a7.5 7.5 0 0114.998 0A17.933 17.933 0 0112 21.75c-2.676 0-5.216-.584-7.499-1.632z')
                    
                    a.link-btn.font-bold(href="/manage/profile" class=title.toLowerCase() == 'profile' ? 'active' : '') Profile

            li.text-white 
                div.flex.items-center.gap-2
                    svg.w-6.h-6(xmlns='http://www.w3.org/2000/svg' fill='none' viewbox='0 0 24 24' stroke-width='1.5' stroke='currentColor')
                        path(stroke-linecap='round' stroke-linejoin='round' d='M15.75 9V5.25A2.25 2.25 0 0013.5 3h-6a2.25 2.25 0 00-2.25 2.25v13.5A2.25 2.25 0 007.5 21h6a2.25 2.25 0 002.25-2.25V15M12 9l-3 3m0 0l3 3m-3-3h12.75')
                    form(action="/auth/logout", method="post") 
                        input(type="hidden", name="_csrf" value=csrfToken)
                        input.cursor-pointer.font-bold(type="submit", value="Log out")
        
        div.flex.items-center.gap-2.mt-10
            div.w-14.h-14.rounded-full.overflow-hidden 
                img(src=user.img == null ? "/images/user.png" : `/uploads/${user.img}`, alt="user image")

            div.flex.flex-col
                p.text-white.font-bold #{user.name}
                p.text-white.text-xs #{user.email}
